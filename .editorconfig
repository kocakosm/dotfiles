root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
max_line_length = off
insert_final_newline = false
trim_trailing_whitespace = true

[{*.java,[mM]akefile}]
indent_size = 8
indent_style = tab

[*.properties]
charset = latin1

[{*.xml,*.xsd,*.html,*.json,*.yml,*.yaml,*.vim,*vimrc*,*.tex}]
indent_size = 2
